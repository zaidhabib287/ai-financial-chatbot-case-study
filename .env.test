# Use sqlite for fast, isolated tests
ENVIRONMENT=test
DEBUG=true
API_HOST=127.0.0.1
API_PORT=8001
API_PREFIX=/api/v1

# Async sqlite (backend/models/database will auto-convert)
DATABASE_URL=sqlite:///./test.db

# Auth
SECRET_KEY=test-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# RAG / uploads
UPLOAD_DIR=./data/uploads_test
VECTOR_DB_PATH=./data/vectordb_test

# Limits (fallbacks when RAG has no rules)
MOCK_API_DELAY=0
MOCK_API_FAILURE_RATE=0

# Logging
LOG_LEVEL=WARNING
LOG_FILE=./logs/test.log
